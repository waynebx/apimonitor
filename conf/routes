# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page


GET    /                                      controllers.Application.index

GET    /get_apis_list                         controllers.Application.getListAPI
GET    /get_apis_from                         controllers.Application.getListAPIInRest(rest:String)



#Testcase controller

GET 	/testcase								controllers.TestCaseApplication.index
GET		/testcases								controllers.TestCaseApplication.getTestcases(start: Int = 0, size: Int = 100)
GET		/api_in_testcase/:id					controllers.TestCaseApplication.getAPIsinTestCase(id: String)
POST	/add_test_case                         	controllers.TestCaseApplication.addTestCase
POST	/delete_test_case/:id                   controllers.TestCaseApplication.deleteTestCase(id : String)
POST	/add_api_to_testcase                    controllers.TestCaseApplication.addAPI2TestCase()
POST	/remove_api_from_testcase               controllers.TestCaseApplication.removeAPIfromTestCase()



#API Controller
GET 	/version						      controllers.APIApplication.version_index
GET 	/compare							  controllers.APIApplication.version_compare(ver1: String ="20120704", ver2 : String="20120705")
GET    /getapi                                controllers.APIApplication.getapi(keyword: String ?= "", version: String ?= "")
GET   /build_database_for_testcase			  controllers.TestCaseApplication.buildAPIDatabase
GET    /get_resources                         controllers.APIApplication.getResources(start:String,size:String,rest:String,version:String)
GET    /get_list_version                      controllers.APIApplication.getListVersion(start: String="0", size: String="10")
GET    /get_list_name_resource                controllers.APIApplication.getResourceNameInVersion(version:String?= "")
GET    /get_resource                          controllers.APIApplication.getResource(rest: String?= "",id : String?= "", keyword:String?= "",version:String?= "")


POST	/remove_api_from_testcase               controllers.APIApplication.deleteVersion(version:String ?="")


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


